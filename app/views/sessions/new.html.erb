<h1>Login</h1>

<%= form_with url: login_path, method: :post, data: { turbo: false } do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit 'Log in' %>
  </div>
<% end %>

<%= link_to "Sign Up!", new_user_path %>
