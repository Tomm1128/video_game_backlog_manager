<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h1><%= @user.username %></h1>
        </div>
        <div class="card-body">
          <h3 class="text-center text-muted"><%= @user.bio %></h3>

          <hr>

          <% if @user.id == session[:user_id]%>
            <%= link_to "Add to collections", new_user_collection_video_game_path(@user), class: "btn btn-primary" %>
          <% end%>

          <h4 class="mt-4">Completed</h4>
          <ul class="list-group">
            <% if @completed_games %>
              <% @completed_games.each do |video_game| %>
                <li class="list-group-item">
                  <%= link_to video_game.name, video_game_path(video_game) %>
                </li>
              <% end %>
            <% end %>
          </ul>

          <h4 class="mt-4">In-Progress</h4>
          <ul class="list-group">
            <% if @in_progress_games %>
              <% @in_progress_games.each do |video_game| %>
                <li class="list-group-item">
                  <%= link_to video_game.name, video_game_path(video_game) %>
                </li>
              <% end %>
            <% end %>
          </ul>

          <h4 class="mt-4">Wishlist</h4>
          <ul class="list-group">
            <% if @wishlist_games %>
              <% @wishlist_games.each do |video_game| %>
                <li class="list-group-item">
                  <%= link_to video_game.name, video_game_path(video_game) %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
