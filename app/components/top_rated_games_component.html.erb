<div class="row">
  <% games.each do |game| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= game.name %></h5>
          <p class="card-text">Average Rating: <strong><%= game.average_rating %></strong></p>
          <%= link_to 'View Game', video_game_path(game.id), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
